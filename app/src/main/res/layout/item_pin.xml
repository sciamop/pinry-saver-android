<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp">

    <ImageView
        android:id="@+id/pinImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:background="@drawable/bg_pin_placeholder"
        android:clipToOutline="true"
        android:scaleType="centerCrop"
        android:contentDescription="@string/pin_image" />

    <ImageView
        android:id="@+id/placeholderIcon"
        android:layout_width="@dimen/pin_placeholder_size"
        android:layout_height="@dimen/pin_placeholder_size"
        android:layout_gravity="center"
        android:contentDescription="@string/pin_image"
        android:src="@drawable/pinry_saver_bitmap_icon"
        android:tint="@color/primary_color" />

    <ImageView
        android:id="@+id/itemProgress"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="center"
        android:src="@drawable/pinry_saver_bitmap_icon"
        android:tint="@color/primary_color" />

</FrameLayout>

