<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp">

    <ImageView
        android:id="@+id/pinImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:background="@drawable/bg_pin_placeholder"
        android:clipToOutline="true"
        android:contentDescription="@string/pin_image"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/placeholderIcon"
        android:layout_width="@dimen/pin_placeholder_size"
        android:layout_height="@dimen/pin_placeholder_size"
        android:contentDescription="@string/pin_image"
        android:src="@drawable/pinstle_bitmap_icon"
        android:tint="@color/primary_color"
        app:layout_constraintBottom_toBottomOf="@id/pinImage"
        app:layout_constraintEnd_toEndOf="@id/pinImage"
        app:layout_constraintStart_toStartOf="@id/pinImage"
        app:layout_constraintTop_toTopOf="@id/pinImage" />

</androidx.constraintlayout.widget.ConstraintLayout>