<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android"
    android:interpolator="@android:anim/accelerate_decelerate_interpolator"
    android:repeatCount="infinite"
    android:repeatMode="reverse"
    android:startOffset="3000">
    
    <!-- Floating animation - MOLASSES slow -->
    <translate
        android:duration="30000"
        android:fromYDelta="0dp"
        android:toYDelta="-6dp" />
    
    <!-- Glitch shake - gentle -->
    <translate
        android:duration="22000"
        android:fromXDelta="0dp"
        android:toXDelta="2dp" />
        
    <!-- Scale pulsing -->
    <scale
        android:duration="22000"
        android:fromXScale="1.0"
        android:fromYScale="1.0"
        android:pivotX="50%"
        android:pivotY="50%"
        android:toXScale="1.33"
        android:toYScale="1.33" />
        
    <!-- Rotation glitch -->
    <rotate
        android:duration="10000"
        android:fromDegrees="0"
        android:toDegrees="3"
        android:pivotX="50%"
        android:pivotY="50%" />
</set>
